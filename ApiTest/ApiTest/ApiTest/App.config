<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="dotNetOpenAuth" type="DotNetOpenAuth.Configuration.DotNetOpenAuthSection, DotNetOpenAuth.Core">
      <section name="messaging" type="DotNetOpenAuth.Configuration.MessagingElement, DotNetOpenAuth.Core" requirePermission="false" allowLocation="true" />
      <section name="reporting" type="DotNetOpenAuth.Configuration.ReportingElement, DotNetOpenAuth.Core" requirePermission="false" allowLocation="true" />
    </sectionGroup>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <dotNetOpenAuth>
    <messaging relaxSslRequirements="true"/>
  </dotNetOpenAuth>
  <appSettings>
    <add key="AuthorizationServerBaseAddress" value="http://localhost:17170/"/>
    <add key="ClientId" value="123456"/>
    <add key="ClientSecret" value="abcdef"/>
    <add key="AuthorizePath" value="/OAuth/Authorize"/>
    <add key="TokenPath" value="/OAuth/Token"/>
  </appSettings>
</configuration>
